<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="Zenstruck\ContentBundle\Entity\Node">

        <constraint name="Zenstruck\ContentBundle\Validator\SimplePathUnique">
            <option name="message">Path is already used</option>
        </constraint>

        <property name="title">
            <constraint name="NotBlank">
                <option name="message">Please enter title</option>
            </constraint>
        </property>
        
    </class>
</constraint-mapping>