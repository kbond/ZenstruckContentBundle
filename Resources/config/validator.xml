<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Path Unique Validator Service -->
        <service id="zenstruck_content.validator.inherited_unique_entity"
                 class="Zenstruck\Bundle\ContentBundle\Validator\InheritedUniqueEntityValidator">
            <argument type="service" id="zenstruck_content.manager" />
            <tag name="validator.constraint_validator" alias="zenstruck_content.validator.inherited_unique_entity" />
        </service>

    </services>

</container>
