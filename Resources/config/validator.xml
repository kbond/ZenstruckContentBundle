<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Path Unique Validator Service -->
        <service id="zenstruck_content.validator.simple_path_unique"
                 class="Zenstruck\Bundle\ContentBundle\Validator\SimplePathUniqueValidator">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="validator.constraint_validator" alias="zenstruck_content.validator.simple_path_unique" />
        </service>
        
    </services>

</container>
